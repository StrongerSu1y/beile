.periodical_detail_view
	position relative
	padding-bottom 260px
	background-color #fafafb
	.periodical_main
		max-width 980px
		margin 0 auto
		padding 40px
		background-color #fff
		.periodical_main_content
			margin-top 60px
			overflow hidden
			div, span, iframe, h1, h2, h3, h4, h5, h6, p, table, section, audio, video, input
				max-width 100% !important
				overflow hidden
		.periodical_detail_top
			margin-top 40px
			display flex
			overflow hidden
			.periodical_top_left
				width 230px
				height 230px
				background-repeat no-repeat
				background-size contain
				background-position center center
				border 1px solid #e1e6ea
				border-radius 3px
			.periodical_top_right
				flex 1
				margin-left 20px
				position relative
				.periodical_right_title
					font-weight bold
					margin-top 10px
					font-size 20px
					line-height 30px
					color #323435
					overflow hidden
					text-overflow ellipsis
					display -webkit-box
					-webkit-box-orient vertical
					-webkit-line-clamp 2
					max-height 60px
				.el-row
					position absolute
					width 100%
					bottom 0
					left 0
					vertical-align bottom
					.el-col
						position relative
						// bottom 0
						vertical-align bottom
						margin-right 10px
						margin-top 80px
						width 80px
						height 120px
						transition 0.3s all linear
						&:hover
							width 120px
							height 120px
						.periodical_img_box
							position absolute
							bottom 0
							left 0
							width 100%
							height 80px
							border 1px solid #e1e6ea
							border-radius 3px
							background-size contain
							background-position center center
							background-repeat no-repeat
							cursor pointer
							transition 0.3s all linear
							&:hover
								width 120px
								height 120px
							// transform translate(-40px, -200px)
							// transform scale(1.5)
		.detail_order_code
			margin-top 180px
			width 100%
			text-align center
			.detail_code_img
				width 100%
				height 280px
				> img
					display inline-block
					width 280px
					height 280px
			.detail_order_text
				margin-top 20px
				font-size 20px
				line-height 1
				color #b9bdc0