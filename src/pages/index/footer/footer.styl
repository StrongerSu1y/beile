// 底部
.index_page_footer
	position absolute
	bottom 0
	height 260px
	width 100%
	box-shadow 0 -2px 2px 0 #e1e6ea
	background-color #fff
	.index_footer_main
		max-width 980px
		margin 0 auto
		.index_logo_box
			margin-top 40px
			.index_logo
				width 250px
				height 50px
				display inline-block
		.index_info_list
			margin-top 5px
			.index_info_item
				margin-top 10px
				font-size 0
				line-height 20px
				> img
					display inline-block
					width 20px
					height 20px
					vertical-align middle
				> span
					margin-left 10px
					font-size 12px
					color #323435
		.index_bottom_text
			margin-top 20px
			font-size 0
			line-height 18px
			color #A9ADB0 
			> span
				font-size 12px
				&.bottom_text_right
					margin-left 40px
		.index_code_box
			margin-left 20px
			margin-top 40px
			width 150px
			padding 10px
			border 1px solid #E1E3E5
			border-radius 2px
			> img
				display block
				width 100%
			.index_code_text
				text-align center
				margin-top 10px
				font-size 12px
				line-height 20px
				color #83888c