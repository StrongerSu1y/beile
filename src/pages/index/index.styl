.index_page
	min-height 100%
	.index_text_left
		text-align left
	.index_text_right
		text-align right
	.index_logo
		display inline-block
		width 200px
		height 40px
		vertical-align middle
	// 子页面
	.child-page
		position absolute
		width 100%
		// top 0
		// left 0
	// 头部
	.index_page_header
		width 100%
		background-color #fff
		border-bottom 1px solid #e1e6ea
		.index_page_nav
			margin 0 auto
			max-width 980px
			.index_nav_list
				width 480px
				.el-col
					margin-left 5px
					&:first-child
						margin-left 0
				.index_nav_btn
					font-size 14px
					width 100%
					height 44px
					border none
			.nav_right_box
				// width 170px
				padding 8px 0
				.account_set_menu
					overflow auto
					height 28px
					.account_set_btn
						height 28px
						border none
						padding 9px
						> span
							font-weight bold
					.account_dropdown_menu
						width 300px
						.account_drop_list
							width 400px
				.nav_right_avatar
					line-height 28px
					cursor pointer
					> img
						display inline-block
						width 28px
						height 28px
						vertical-align middle
						border-radius 50%
						border 2px solid #ffcd3d
		.index_header_main
			margin 0 auto
			max-width 980px
		.index_header_btn
			font-size 12px
			color #a9adb0
			padding 0 10px
			margin-left 0
			&:first-child
				border-right 1px solid #c8cdcf
			&:hover
				color #3dabf4
		.index_header_top
			height 30px
			.header_top_title
				font-size 12px
				line-height 30px
				color #a9adb0
			.index_top_right
				font-size 0
				line-height 30px
		.index_header_nav
			line-height 80px
			.index_nav_right
				font-size 0
				position relative
				.index_qrcode_box
					position absolute
					right 10px
					top 60px
					z-index 4
					padding 10px
					box-shadow 0 0 5px 0 rgba(0, 0, 0, 0.35)
					background-color #fff
					border-radius 8px
					> img
						display inline-block
						width 100px
						height 100px
				.index_hotline_icon
					display inline-block
					width 30px
					height 30px
					vertical-align middle
				.index_three_icon
					margin-left 30px
					display inline-block
					width 30px
					height 30px
					vertical-align middle
					background-size 100% 100%
					cursor pointer
				.index_hotline_box
					margin-left 10px
					display inline-block
					height 44px
					line-height 44px
					.index_hotline_top
						text-align left
						margin-top 10px
						font-size 12px
						line-height 1
						color #a9adb0
					.index_hotline_bottom
						margin-top 2px
						font-size 14px
						line-height 1
						color #323435
			.index_nav_btn
				font-size 12px
				line-height 14px
				padding 0 10px
				border-right 2px solid #d8e1e7
				&:last-child
					padding 0 0 0 10px
					border-right none
	.el-fade-in-enter-active
		transition-duration 1s !important
	.el-fade-in-leave-active
		transition-duration 1s !important
				