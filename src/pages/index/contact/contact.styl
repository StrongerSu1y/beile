.contact_main_view
	position relative
	padding-bottom 260px
	background-color #fafafb
	.contact_info_box
		max-width 980px
		margin 0 auto
		padding 40px
		background-color #fff
		.contact_info_title
			width 108px
			background-image url('../title_bg.png')
			background-repeat no-repeat
			background-size 108px 44px
			font-size 16px
			line-height 44px
			text-align center
			color #323435
		.position-box
			margin-top 40px
			width 100%
			height 540px
			overflow hidden
			border 5px solid #fff
			border-radius 5px
			box-shadow 0 0 5px 0 rgba(0, 0, 0, 0.35)
			> img
				display inline-block
				width 100%
				vertical-align middle
		.contact_info_list
			margin-top 40px
			.contact_info_item
				margin-top 20px
				.contact_item_para
					display inline-block
					font-size 0
					line-height 50px
					box-shadow 0 0 5px 0 rgba(0, 0, 0, 0.2)
					border-radius 25px
					background-color #fff
					padding-right 40px
					.contact_left_text
						display inline-block
						width 120px
						text-align center
						font-size 14px
						color #fff
						background-color #57adf5
						border-radius 25px 0 0 25px
					.contact_right_text
						display inline-block
						padding-left 20px
						font-size 14px
						color #323435
						background-color #fff
