.register_page
	width 100%
	position relative
	padding-bottom 260px
	i.el-input__icon
		cursor pointer
	.register_page_main
		width 800px
		padding 0 20px 40px
		// height 530px
		margin 0 auto
		border 1px solid #e1e6ea
		box-shadow 8px 8px 0 0 #e1e6ea
		.register_title
			font-size 16px
			line-height 60px
			border-bottom 1px solid #e1e6ea
		.register_body
			position relative
			width 340px
			margin 0 auto
			padding-top 44px
			.register_input_box
				margin-top 16px
				&:first-child
					margin-top 0
				.el-icon-view
					&.active
						color #ffcd3d
				#codeArea
					width 100%
					height 100%
				.register_input_text
					height 44px
					> input
						height 44px
						line-height 44px
					&.border_right_none
						> input
							border-right none
							border-radius 4px 0 0 4px
					.el-input__inner
						padding 10px 0
						font-size 14px
						line-height 1
						text-indent 14px
					.el-icon-circle-close
						cursor pointer
					.el-icon-view
						cursor pointer
						&.active
							color #f8bd48
					> input
						height 44px
						line-height 44px
			.register_get_code
				height 44px
				width 100%
				background-color #ffcd3d
				border 1px solid #ffcd3d
				border none
				border-radius 0 4px 4px 0
				&.disabled
					background-color #e1e6ea
					border 1px solid #e1e6ea
			.register_bottom_btn
				text-align right
				.register_next_step
					margin-top 30px
					width 120px
					height 44px
					border-radius 3px
					background-color #57ADF5
			.register_success_text
				font-size 20px
				line-height 1
				color #323435
			.register_desc_line
				margin-top 30px
				font-size 0
				// height 16px
				// line-height 16px
				color #c6c6c6
				.el-icon-circle-check
					&.active
						color #ffcd3d
				> i
					font-size 16px
					line-height 16px
					vertical-align middle
				> .register_desc_text
					font-size 14px
					line-height 16px
					vertical-align middle
		