.login_page
	width 100%
	height 100%
	padding-top 80px
	position relative
	padding-bottom 260px
	background linear-gradient(to right, #90D6FB, #57ADF5)
	.login_page_body
		background-image url('login_bg.png')
		background-size contain
		background-position center bottom
		background-repeat no-repeat
		width 100%
		.login_page_main
			margin 0 auto
			// background-image url('login_bg.png')
			background-size contain
			background-position center bottom
			background-repeat no-repeat
			width 100%
			// position absolute
			// bottom 260px
			.login_main_box
				width 400px
				margin 25px auto 0
				padding 25px 30px 62px
				background-color rgba(255, 255, 255, 0.98)
				box-shadow 0 0 5px 0 rgba(0, 0, 0, 0.35)
				.login_main_title
					text-align left
					font-size 18px
					line-height 18px
					color #323435
				.login_input_box
					width 100%
					margin-top 15px
					&.first
						margin-top 30px
					.login_input_text
						.el-input__inner
							padding 10px 0
							font-size 14px
							line-height 1
							text-indent 14px
						.el-icon-circle-close
							cursor pointer
						.el-icon-view
							cursor pointer
							&.active
								color #f8bd48
						> input
							height 44px
							line-height 44px
				.login_register_box
					margin-top 10px
					.login_register_btn
						color #323435
						&:hover
							color #3dabf4
				.login_btn
					margin-top 10px
					width 100%
					font-size 14px
					line-height 26px
					height 47px
					color #fff
					background-color #57ADF5
					border-radius 3px
					&:hover
						font-size 12px
						background-color #4B98D8
				.login_three_title
					font-size 12px
					line-height 1
					color #83888c
					margin-top 40px
				.index_three_box
					margin-top 30px
					margin-left auto !important
					margin-right auto !important
					width 180px
					.login_three_logo
						display inline-block
						width 40px
						height 40px
						cursor pointer
						background-size 100% 100%
						background-repeat no-repeat
						&.qq
							background-image url('qq_logo.png')
							&:hover
								background-image url('qq_active_logo.png')
						&.weixin
							background-image url('weixin_logo.png')
							&:hover
								background-image url('weixin_active_logo.png')
						&.weibo
							background-image url('weibo_logo.png')
							&:hover
								background-image url('weibo_active_logo.png')
				 