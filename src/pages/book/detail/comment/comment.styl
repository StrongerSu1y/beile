.detail_comment_area
	margin-top 180px
	width 100%
	// padding 0 40px
	.detail_comment_title
		font-size 16px
		line-height 1
		padding-bottom 20px
		color #ffcd3d
		border-bottom 1px solid #e1eae6
	.detail_comment_list
		width 100%
		.detail_comment_item
			margin-top 60px
			width 100%
			display flex
			overflow hidden
			.comment_left_part
				width 40px
				height 40px
				overflow hidden
				border-radius 50%
				> img
					display inline-block
					width 100%
					height 100%
			.comment_right_part
				margin-left 16px
				flex 1
				overflow hidden
				.comment_top_info
					width 100%
					display flex
					.comment_user_name
						flex 1
						font-size 14px
						line-height 40px
						color #83888c
					.comment_create_time
						flex 1
						text-align right
						font-size 16px
						line-height 60px
						color #B9BDC0
				.comment_item_content
					margin-top 20px
					font-size 16px
					line-height 24px
					color #323435
				.comment_delete_box
					margin-top 30px
					text-align right
	.my_comment_title
		margin-top 160px
		font-size 20px
		line-height 1
		color #f3ba15
	.comment_input_area
		margin-top 30px
		font-size 14px
		line-height 20px
	.comment_submit_icon
		margin-top 30px
		.el-button
			width 120px
			height 50px
			font-size 16px
	.el-pagination
		margin-top 100px
		text-align center